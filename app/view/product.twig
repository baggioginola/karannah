{% extends "layout/master.twig" %}

{% block title %}{{ result.nombre }}{% endblock %}

{% block head %}
    {{ parent() }}
    <script src="{{ settings.JS }}custom/cart.js" type="text/javascript"></script>
{% endblock %}
{% block body_id %}product{% endblock %}
{% block content %}
    <div class="container-fluid wide-content">
        <div id="section">
            <div class="container">
                <div class="row no-gutters bg-white">
                    <div class="row w-75 mx-auto">
                        <div class="container" id="breadcrumb">
                            <ol>
                                <li><a href="{{ settings.DOMAIN }}">Inicio</a></li>
                                <li>&gt;</li>
                                <li>
                                    <a href="{{ settings.DOMAIN }}categoria/{{ result.id_categoria }}">{{ result.categoria }}</a>
                                </li>
                                <li>&gt;</li>
                                <li><span class="active-page">{{ result.nombre }}</span></li>
                            </ol>
                        </div>
                        <div class="row mx-auto  mt-4 my-5">
                            <div class="col-md-4 col-md-offset-0 text-center">
                                <img class="img-fluid" src="{{ result.url_image }}"
                                     alt="{{ result.nombre }}"
                                     title="{{ result.nombre }}" id="bigPic"/>
                            </div>
                            <div class="col-md-8">
                                <h2>{{ result.nombre }}</h2>
                                <h4>CÃ³digo: {{ result.codigo_interno }}</h4>

                                <p>
                                    {{ result.descripcion | raw }}
                                </p>
                                <br>
                                <h3>${{ result.precio }}</h3>
                                <br>
                                <button type="button" class="btn btn-outline-dark btn-lg add_cart">Agregar al carrito
                                </button>
                                <div style="clear: both"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.text -->
    </div>
{% endblock %}