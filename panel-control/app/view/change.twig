{% extends "layout/master.twig" %}
{% block title %}Tipo Cambio{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <h2 class="sub-header">Tipo de Cambio</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" role="form" id="form_global" data-toggle="validator">
                <div class="form-group has-feedback">
                    <label for="id_nombre" class="col-lg-2 control-label">Moneda:</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="id_moneda" placeholder="Moneda" autocomplete="off"
                               name="moneda" required="required">
                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label for="id_nombre" class="col-lg-2 control-label">Tipo de Cambio:</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="id_tipo_cambio" placeholder="Tipo de Cambio"
                               autocomplete="off" required="required" name="tipo_cambio">
                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                    </div>
                </div>

                <div class="form-group" style="text-align: right;">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary" id="id_submit">Aceptar</button>
                        <button type="button" class="btn btn-primary" id="reset_button">Limpiar</button>
                    </div>
                </div>
                <input type="hidden" id="submit_type" value="tipo_cambio/add"/>
                <input type="hidden" id="submit_id"/>
            </form>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Moneda</th>
                    <th>Tipo Cambio</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
    <script type="text/javascript" src="{{ settings.JS }}custom/tipo_cambio.js"></script>
    <script type="text/javascript" src="{{ settings.JS }}validator.js"></script>
{% endblock %}